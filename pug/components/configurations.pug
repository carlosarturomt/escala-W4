//- F O R M - D A T E
mixin form_simple(form, nombreprof, email)
	aside.overlay-popup#overlayPopup: div.popup#popup
		a.closePopup#closePopup(href="#"): i.fa.fa-times
		h4= form
		form(action="/profile/form.php" method="POST")
			.container-inputs
				input(type="text" hidden name="profesionista" value=nombreprof)
				input(type="email" hidden  name="destino1" value=email)
				label(for="name") Nombre 
				input(type="text" placeholder="Name" name="nombre" autocomplete="on" required)
				label(for="email") Email
				input(type="email" placeholder="Email" name="correo" autocomplete="email")
				label(for="phone") Teléfono
				input(type="phone" placeholder="Phone" name="numero" autocomplete="tel" required)
				label(for="text") Mensaje
				textarea(cols="45" rows="4" name="mensaje" placeholder="Message" required)
			input(type="submit" name="btn-submit" class="btn-submit" value="Enviar") 

//- F O R M - S E R V I C E S
mixin form_services(form, nombreprof, email, servicio0, servicio1, servicio2, servicio3, servicio4)
	aside.overlay-popup#overlayPopup1: div.popup#popup1
		a.closePopup#closePopup1(href="#services"): i.fa.fa-times
		h4= form
		form(action="/profile/form.php" method="POST")
			.container-inputs
				input(type="text" hidden name="profesionista" value=nombreprof)
				input(type="email" hidden  name="destino1" value=email)
				label(for="") Servicio 
				br
				select.popup-select(name="servicio" placeholder="Servicio" required)
					option(hidden selected style="color:gray !important") Selecciona una opción
					option.popup-option= servicio0
					option.popup-option= servicio1
					option.popup-option= servicio2
					option.popup-option= servicio3
					option.popup-option= servicio4
				br
				label(for="date") Fecha Tentativa
				input(type="date" name="fecha" placeholder="")
				label(for="name") Nombre
				input(type="text" placeholder="Name" name="nombre" autocomplete="on" required)
				.ageSex
					.age
						label(for="name") Edad
						input(type="text" placeholder="Age" name="edad" autocomplete="on" required)
					.sex
						label(for="name") Sexo
						input(type="text" placeholder="Sex" name="sexo" autocomplete="on")
				.ageSex
					.age
						label(for="phone") Teléfono
						input(type="phone" placeholder="Phone" name="numero" autocomplete="tel" required)
					.sex
						label(for="email") Email
						input(type="email" placeholder="Email" name="correo" autocomplete="email")
				label(for="text") Mensaje
				textarea(cols="45" rows="4" name="mensaje" placeholder="Message" required)
			input(type="submit" name="btn-submit1" class="btn-submit" value="Enviar") 

