//- C A R D - P O R T F O L I O 
mixin card_portfolio(icon, title, date, image, url, github, text)
	article.container__card
		aside.container__card--header
			img.container__card--header-photo(src=icon alt="profile photo")
			hgroup
				h2=title
				h3=date
		a(href=url target="_blank" rel="noopener noreferrer"): img.container__card--cover(src=image alt="cover")
		p=text
		footer
			a.item-a(href=url target="_blank" rel="noopener noreferrer") Ver más
			a.item-b(href=github target="_blank" rel="noopener noreferrer") GitHub    
			//- i.share.item-d

//- C A R D - G A L L E R Y
mixin card_gallery(title, url, text)
	article.container__card
		aside.container__card--header
			hgroup
				h2=title
				h3=date
		img.container__card--cover-100(src=url alt="cover")
		p=text

//- C A R D - G A L L E R Y - S I M P L E
mixin card_gallery-simple(icon, name, date, text, url, alt)
	article.container__card100
		aside.container__card100--header
			img.container__card100--header-photo.border-radius(src=icon alt="profile photo")
			hgroup
				.flex
					h3=name
					span= date
				p=text
		img.container__card100--cover-100(src=url alt=alt)